{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "dist/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "dist/public/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "dist/public/assets/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "dist/public/images/$1"
    },
    {
      "src": "/favicon.png",
      "dest": "dist/public/favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ]
}
